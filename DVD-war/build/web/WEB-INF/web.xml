<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ConnectServlet</servlet-name>
        <servlet-class>web.ConnectServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DVDAddServlet</servlet-name>
        <servlet-class>web.DVDAddServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DVDListServlet</servlet-name>
        <servlet-class>web.DVDListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DVDAddCartServlet</servlet-name>
        <servlet-class>web.DVDAddCartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DVDCartServlet</servlet-name>
        <servlet-class>web.DVDCartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListenerMessageServlet</servlet-name>
        <servlet-class>web.ListenerMessageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PostMessageServlet</servlet-name>
        <servlet-class>web.PostMessageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ConnectServlet</servlet-name>
        <url-pattern>/ConnectServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DVDAddServlet</servlet-name>
        <url-pattern>/DVDAddServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DVDListServlet</servlet-name>
        <url-pattern>/DVDListServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DVDAddCartServlet</servlet-name>
        <url-pattern>/DVDAddCartServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DVDCartServlet</servlet-name>
        <url-pattern>/DVDCartServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListenerMessageServlet</servlet-name>
        <url-pattern>/ListenerMessageServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PostMessageServlet</servlet-name>
        <url-pattern>/PostMessageServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
